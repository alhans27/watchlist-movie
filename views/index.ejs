<%- include('layout/header'); %>

<div class="container p-3">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) {%>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
                <% } %>
            <h1>My Watchlist Movies</h1>
            <div class="table-responsive mt-4">
                <% if (movies != "") { %>
                    <table class="table table-striped table-bordered">
                        <thead class="table-dark">
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Poster</th>
                            <th scope="col">Title</th>
                            <th scope="col">Year</th>
                            <th scope="col">Description</th>
                            <th scope="col">Link</th>
                            <th scope="col">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% movies.forEach((movie, index) => { %>
                                <tr class="align-middle">
                                    <th scope="row"><%= index+1 %></th>
                                    <td><img src="<%= movie.image  %>" alt="<%= movie.image  %>" width="100px" class="img-thumbnail"></td>
                                    <td><%= movie.title %></td>
                                    <td><%= movie.year %></td>
                                    <td class="overflow-hidden"><%= movie.description %></td>
                                    <td class="text-center"> <% if (movie.link != "-") { %>
                                        <a href="<%= movie.link %>" target="_blank" rel="noopener noreferrer" class="p-2 text-white bg-warning rounded-circle"><i class="fa-solid fa-link"></i></a>
                                    <% } else { %>
                                        -
                                    <% } %>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-evenly m-2">
                                            <a href="/detail" class="p-2 m-2 text-white bg-success rounded-circle"><i class="fa-solid fa-share-from-square mx-1"></i></a>
                                            <a href="/edit/<%= movie._id %>" class="p-2 m-2 text-white bg-info rounded-circle"><i class="fa-solid fa-pen mx-1"></i></a>
                                            <a href="/delete/<%= movie._id %>" class="p-2 m-2 text-white bg-danger rounded-circle" onclick="return confirm('Are you sure to delete this Movie?');"><i class="fa-solid fa-trash mx-1"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">Insert Your New Watchlist Movie...</h1>
                <% } %>
            </div>  
        </div>
    </div>
</div>

<%- include('layout/footer'); %>